{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "erasableSyntaxOnly": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "target": "es2018",
        "module": "esnext",
        "strict": true,
        "noEmit": true
    },
    "include": [
        "**/*.ts",
        "**/*.js"
    ]
}